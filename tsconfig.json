{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": true //disable use of 'any'
  },
  "compileOnSave": true,
  "include": ["src"]
}
